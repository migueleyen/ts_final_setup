{
    "compilerOptions": {

        "module": "NodeNext", // compile esmodule: export const , import * from 
        "moduleResolution": "NodeNext", // strategy used by the TypeScript compiler how modules are resolved when you use import or require exports...
        "target": "ES2015",        
        "outDir": "dist",
        "rootDir": "src",
        "strict":true, // strict type-checking 
        "esModuleInterop": true, // enable module.exports and require(commonJS) sintaxis scripts
        "skipLibCheck": true // skip type checking of declaration files (.d.ts)
    },
    "include": ["src/**/*.ts"]
}